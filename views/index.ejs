    <section class="side__nav">
        <div class="d-flex flex-row">
            <div class="side__bar">
                <ul class="navbar-nav flex-grow-1 pt-2 justify-content-center text-center">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">
